{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    // enable additional rules
    "indent": ["error", 2],
    "linebreak-style": ["warn", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],

    // override configuration set by extending "eslint:recommended"
    "no-empty": "warn",
    "no-cond-assign": ["error", "always"],
    "no-unused-vars": ["warn", { "vars": "all" }],
    "no-undef": ["warn"]
  }
}
